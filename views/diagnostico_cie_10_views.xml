<?xml version="1.0"?>
<odoo>

    <!--Vista Ã¡rbol Diagnostico CIE 10-->
    <record id="view_po_pac_diagnostico_cie_10_tree" model="ir.ui.view">
        <field name="name">po_pac.diagnostico_cie_10.tree</field>
        <field name="model">po_pac.diagnostico_cie_10</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" placeholder="Nombre"/>
                <field name="codigo"/>
            </tree>
        </field>
    </record>

    <!--Vista Form Diagnostico CIE 10-->
    <record id="view_po_pac_diagnostico_cie_10_form" model="ir.ui.view">
        <field name="name">po_pac.diagnostico_cie_10.form</field>
        <field name="model">po_pac.diagnostico_cie_10</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <div class="o_row">
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="codigo"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
