<?xml version="1.0"?>
<odoo>

    <!--Vista Ã¡rbol Hospital-->
    <record id="view_po_pac_hospital_tree" model="ir.ui.view">
        <field name="name">po_pac.hospital.tree</field>
        <field name="model">po_pac.hospital</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!--Vista Form Hospital-->
    <record id="view_po_pac_hospital_form" model="ir.ui.view">
        <field name="name">po_pac.hospital.form</field>
        <field name="model">po_pac.hospital</field>
        <field name="arch" type="xml">
            <form delete="0">
                <sheet>
                    <div class="oe_title">
                        <div class="o_row">
                            <h1>
                                <field name="name" placeholder="Nombre"/>
                            </h1>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
